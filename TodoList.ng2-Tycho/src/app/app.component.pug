md-card.todos
  md-card-title.title todos
  md-card-content
    md-list
      md-list-item(*ngFor='let todo of todos; let idx = index;', [class.done]='todo.done')
        button.delete(md-mini-fab (click)='remove(idx)', color='warn')
          md-icon clear
        md-checkbox((change)='toggle(todo)', [checked]='todo.done') {{todo.title}}
  md-card-actions
    form((submit)="add(myInput.value)")
      md-input(#myInput='', placeholder='What needs to be done?', autofocus, name='title', [(ngModel)]='newTodoText')
      button(md-fab type='submit' color='primary')
        md-icon add
